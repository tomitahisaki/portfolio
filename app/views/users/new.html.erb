<%= content_for(:title, t('.title')) %>
<div class="hero min-h-screen">
  <div class="relative w-full h-full">
    <img class="object-cover object-center w-full h-full" src="<%= asset_path 'beach-1852945.jpg' %>" alt="">
    <div class="absolute inset-0 bg-black bg-opacity-20"></div>
    <div class="absolute lg:top-1/3 top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-full lg:w-1/2 px-6 py-4 bg-custom_color2 rounded-lg shadow-md opacity-90">
      <h1 class='text-black lg:text-3xl text-lg font-bold border-b-2 py-2 mb-4 text-center'><%= t('.title') %></h1>
      <%= form_with model: @user, local: true do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class='form-control mb-5 '>
          <%= f.label :name, class:'block text-black font-semibold lg:text-lg text-sm  mb-2' %>
          <%= f.text_field :name, placeholder: '名前', class:' appearance-none border rounded w-full py-2 px-3 text-black leading-tight focus:outline-none ' %>
        </div>
        <div class='form-control mb-5 '>
          <%= f.label :email,class:'block text-black lg:text-lg text-sm font-semibold mb-2' %>
          <%= f.text_field :email, placeholder: '***@example.com', class:' appearance-none border rounded w-full py-2 px-3 text-black leading-tight focus:outline-none ' %>
        </div>
        <div class='form-control mb-5 '>
          <%= f.label :password, class:'block text-black lg:text-lg text-sm font-semibold mb-2' %>
          <%= f.password_field :password, placeholder: 'パスワード', class:' appearance-none border rounded w-full py-2 px-3 text-black leading-tight focus:outline-none ' %>
        </div>
        <div class='form-control mb-5 '>
          <%= f.label :password_confirmation, class:'block text-black lg:text-lg text-sm font-semibold mb-2' %>
          <%= f.password_field :password_confirmation, placeholder: 'パスワード確認', class:' appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none ' %>
        </div>
        <div class='mt-6 text-center'>
          <%= f.submit t('defaults.register'), class:'btn btn-ghost link link-hover hover:text-white font-bold lg:text-3xl text-lg' %>
        </div>
      <% end %>
    </div>
  </div>
</div>