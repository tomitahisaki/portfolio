  <div class='relative  top-0 left-0 w-full h-full z-0'>
    <div id='map'></div>
    <div class='absolute top-0 left-0  h-full z-10 justify-start items-center opacity-70'>
      <%= form_with model: plan, local: true do |f| %>
        <div class="form-control flex flex-col" >
          <%= render 'shared/error_messages', object: f.object %>
          <div class='flex justify-evenly'>
            <%= f.label :name, class:"text-3xl font-gray-800 font-semibold mr-2" %>
            <%= f.text_field :name, placeholder: '計画名', class:"text-3xl font-gray-800 " %>
          </div>
          <div>
            <input id="address" class=" py-3 px-10 text-gray-700 hover:bg-gray-100" placeholder="国名を入れてください">
            <input type="button" value="追加" onclick="putCode()" class='btn btn-ghost round text-black text-semibold hover:link hover:bg-gray-500 hover:text-white'>
          </div>
            <div class='hidden'>
              <%= link_to_add_association 'add', f, :countries, id:'add', class:'btn btn-secondary hover hover:link',
                  data: {
                          association_insertion_node: '#detail-association-insertion-point',
                          association_insertion_method: 'append',
                        } %>
            </div>
          <div class='flex flex-col mt-2 bg-gray-300 w-3/4 '>
            <h2 class='text-2xl font-semibold'>旅行先</h2>
             <ol id='detail-association-insertion-point'><%= f.fields_for :countries do |country| %><%= render 'country_fields', f: country %>
              <% end %></ol>
            <div class="form-control mt-6">
              <div>
                <%= f.submit '作成する', class:'btn btn-ghost round text-black text-semibold hover:link hover:bg-gray-500 hover:text-white' %>
              </div>
            </div>
        </div>
      <% end %>
    </div>
  </div>


