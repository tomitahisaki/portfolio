        <%= country_field.text_field :name, placeholder: 'name', class:"shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>
      <div class="form-control ">
        <%= country_field.label :latitude, class:"block text-gnray-700 text-sm font-normal mb-2" %>
        <%= country_field.text_field :latitude, placeholder: 'latitude', class:"shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>
      <div class="form-control">
        <%= country_field.label :longtitude, class:"block text-gray-700 text-sm font-normal mb-2" %>
        <%= country_field.text_field :longitude, placeholder: 'longitude', class:"shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight  focus:outline-none focus:shadow-outline" %>
      </div>
    <% end %>
  <% end %>

