<%= content_for(:title, t('.title')) %>
<div class="bg-gray-400 sm:py-5 lg:py-5">
  <div class="min-h-screen pt-20 md:px-8 ">
    <div class='flex flex-col pt-20'>
      <div class='flex flex-row'>
        <div class='w-1/2 '>
          <%= image_tag '25096637_m.jpg', size: '300x300', class: 'mx-auto ' %>
        </div>
        <div class='flex flex-col'>
          <div class='flex flex-row'>
            <p class=' text-2xl' >name</p>
            <div class='text-2xl ml-4'><%= @user.name%></div>
          </div>
          <div class='flex flex-row'>
            <p class=' text-2xl' >email</p>
            <div class='text-2xl ml-4'><%= @user.email%></div>
          </div>
          <div class='flex flex-row'>
            <p class=' text-2xl' >introduction</p>
            <div class='text-2xl ml-4'><%= @user.introduction %></div>
          </div>
        </div>
      </div>
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-x-4 md:gap-x-6 gap-y-6">
        <%= render partial: 'plans/plan', collection: @plans %>
      </div>
    </div>
  </div>
</div>

