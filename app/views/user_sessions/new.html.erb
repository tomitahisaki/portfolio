<%= content_for(:title, t('.title')) %>
<div class="hero min-h-screen" style="background-image: url(<%= asset_path "beach-1852945.jpg" %>);">
  <div class="hero-overlay bg-opacity-50"></div>
  <div class="hero-content w-full text-center ">
    <div class=' w-1/2 px-12 py-8 opacity-90'>
      <h1 class="text-gray-800 text-2xl flex justify-center border-b-2 py-2 mb-4">login</h1>
        <%= form_with model: @user, local: true do |f| %>
          <div class="form-control">
            <%= f.label :email,class:"block text-gray-700 text-sm font-normal mb-2" %>
            <%= f.text_field :email, placeholder: '***@example.com', class:"shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
          </div>
          <div class="form-control">
            <%= f.label :password, class:"block text-gray-700 text-sm font-normal mb-2" %>
            <%= f.password_field :password, placeholder: 'password', class:"shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
          </div>
          <div class=" mt-6">
            <%= f.submit 'Login', class:'btn btn-ghost link link-hover hover:text-white font-bold text-xl' %>
          </div>
        <% end %>
          <label class="flex flex-col ">
            <%= link_to 'Sign up', new_user_path, class:"mt-5 link link-hover hover:text-indigo-700 font-semibold text-lg" %>
            <%= link_to 'Forgot password?','#', class:"mt-5 link link-hover hover:text-indigo-700 font-semibold text-lg" %>
          </label>
        </div>
    </div>
  </div>
</div>