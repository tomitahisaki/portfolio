<%= content_for(:title, t('.title')) %>
<div class="hero min-h-screen">
  <div class="relative w-full h-full">
    <img class="object-cover object-center w-full h-full" src="<%= asset_path 'beach-1852945.jpg' %>" alt="">
    <div class="absolute inset-0 bg-black bg-opacity-20"></div>
    <div class="absolute lg:top-1/3 top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-full lg:w-1/2 px-6 py-4 bg-custom_color2 rounded-lg shadow-md opacity-90">
      <h1 class="text-black lg:text-3xl text-lg font-bold border-b-2 py-2 mb-4 text-center"><%= t('.title') %></h1>
      <%= form_with model: @user, local: true do |f| %>
        <div class="form-control mb-4">
          <%= f.label :email, User.human_attribute_name(:email), class:"block text-black font-semibold lg:text-lg text-sm mb-2" %>
          <%= f.text_field :email, placeholder: '***@example.com', class:"shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>
        <div class="form-control mb-4">
          <%= f.label :password, User.human_attribute_name(:password), class:"block text-black font-semibold lg:text-lg text-sm mb-2" %>
          <%= f.password_field :password, placeholder: 'password', class:"shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>
        <div class="text-center mb-4">
          <%= f.submit t('defaults.login'), class:'btn btn-ghost link link-hover hover:text-white font-bold lg:text-3xl text-lg' %>
        </div>
      <% end %>
      <div class="text-center">
        <label class="flex flex-col">
          <%= link_to (t '.to_register_page'), new_user_path, class:"mt-5 link link-hover hover:text-indigo-700 font-semibold lg:text-xl text-base" %>
          <%= link_to (t '.password_forget'),'#', class:"mt-5 link link-hover hover:text-indigo-700 " %>
        </label>
      </div>
    </div>
  </div>
</div>
